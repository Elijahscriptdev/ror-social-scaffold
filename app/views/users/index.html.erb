<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        </span>
     
         <% if user != current_user %>
          <% if current_user.friend?(user) %>
            <em class='text-primary'>You're friends</em>
            <% elsif current_user.pending_friends.include?(user) %>
              <em class='text-danger'> Pending request </em>
            <% elsif current_user.friend_requests.include?(user) %>
              <%= link_to 'Confirm friend', recieverequest_path(user), method: 'post', class: 'btn btn-success' %>
            <% elsif !current_user.friend?(user) %>
              <%= link_to 'Add friend', sendrequest_path(user.id), method: 'post', class: 'btn btn-success' %>
          <% end %>  
        <% end %>
      </li>
    <% end %>
  </ul>
</section>

